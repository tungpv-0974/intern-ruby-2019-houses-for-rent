<% provide :title, t("header.login") %>

<div class="container my-5 py-5 z-depth-1">
  <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6 text-center">
        <%= form_for(:session, url: login_path) do |f| %>
          <h2 class="mb-4"><%= t "header.login" %></h2>
          <%= f.email_field :email, class: "form-control mb-4", placeholder: t("users.new.email") %>
          <%= f.password_field :password, class: "form-control mb-4", placeholder: t("users.new.pass") %>
          <div class="d-flex justify-content-around">
            <div>
              <div class="custom-control custom-checkbox">
                <%= f.check_box :remember_me, class: "custom-control-input", id: "defaultLoginFormRemember" %>
                <label class="custom-control-label" for="defaultLoginFormRemember"><%= t "users.login.remember_me"%></label>
              </div>
            </div>
            <div>
              <%= link_to t("users.login.forgot_pass"), "#" %>
            </div>
          </div>
          <%= f.submit t("header.login"), class: "btn btn-info btn-block my-4" %>
        <% end %>
        <%= link_to t(".with_facebook"), "/auth/facebook", id: "sign_in" %>
        <p>
          <%= t "users.login.not_a_member" %>
          <%= link_to t("users.new.title"), signup_path %>
        </p>
      </div>
    </div>
  </section>
</div>
