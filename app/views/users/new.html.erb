<% provide :title, t("users.new.title") %>
<div class="container my-5 py-5 z-depth-1">
  <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6 text-center">
        <%= form_for @user, url: signup_path do |f| %>
          <h2 class="mb-4"><%= t "users.new.title" %></h2>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-row mb-4">
            <div class="col">
              <%= f.text_field :first_name, class: "form-control", placeholder: t("users.new.first_name") %>
            </div>
            <div class="col">
              <%= f.text_field :last_name, class: "form-control", placeholder: t("users.new.last_name") %>
            </div>
          </div>
          <%= f.email_field :email, class: "form-control mb-4", placeholder: t("users.new.email") %>
          <%= f.password_field :password, class: "form-control", placeholder: t("users.new.pass") %>
          <small id="defaultPasswordBlock" class="form-text text-muted mb-4">
            <%= t "users.new.at_least_char"%>
          </small>
          <%= f.password_field :password_confirmation, class: "form-control mb-4", placeholder: t("users.new.pass_confirm") %>
          <%= f.submit t("users.new.create_my_account"), class: "btn btn-info my-4 btn-block" %>
        <% end %>
        <%= link_to t("sessions.new.with_facebook"), "/auth/facebook", id: "sign_in" %>
      </div>
    </div>
  </section>
</div>
